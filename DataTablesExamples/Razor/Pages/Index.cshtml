@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">DataTables.net</h1>
    <p>An example of how to use DataTables with a JSON payload from another URL.</p>
</div>

<div class="row">

    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
@*              
                <th>Office</th>
                <th>Extn.</th>
                <th>Start date</th>
                <th>Salary</th>

*@          
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Name</th>
@*            
                <th>Office</th>
                <th>Extn.</th>
                <th>Start date</th>
                <th>Salary</th>
*@
            </tr>
        </tfoot>
    </table>

</div>

@section Scripts {

    <script>

        //alert("Hello");

        $(document).ready(function () {

            var dt = new DataTable("#example", {
                ajax: {
                    url: "data",
                    dataSrc: "data"
                },
                columns: [
                    { 
                        data: "id",
                        orderable: false
                    },
                    { data: "name" }
                ],
                order: [[1, "asc"]]
            });

        });

    </script>

}